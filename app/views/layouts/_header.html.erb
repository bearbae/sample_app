<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("views.title"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("views.home"), "#" %></li>
        <li><%= link_to t("views.help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to t("views.user"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", {class: "dropdown-toggle", "data-toggle" => "dropdown"} do %>
              <%= t "account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.profile"), current_user %></li>
              <li><%= link_to t("views.setting"), '#' %></li>
              <li class="divider"></li>
              <li> <%= link_to t("views.logout"), logout_path, data: { turbo_method: :delete } %></li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t("views.login"), login_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
